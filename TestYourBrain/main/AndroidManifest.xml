<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wkpescherine.testyourbrain">

    <application
        android:allowBackup="true"
        android:icon="@drawable/tyb_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectionScreen"
            android:label="@string/title_activity_selection_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SubjectSelection"
            android:label="@string/title_activity_subject_selection"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ighScores"
            android:label="@string/title_activity_igh_scores"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FullChallenge"
            android:label="@string/title_activity_full_challenge"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Rules"
            android:label="@string/title_activity_rules"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>